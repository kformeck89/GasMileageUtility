<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:background="@android:color/white"
    android:orientation="horizontal" 
    style="?attr/dropdownListPreferredItemHeight">
    
    <!-- Drawer icon -->
	<ImageView
	    android:id="@+id/drawer_item_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/drawer_icon_height"
	    android:layout_gravity="center_vertical"
	    android:paddingRight="@dimen/drawer_icon_padding_right"
	    android:paddingLeft="@dimen/drawer_icon_padding_left"
	    android:adjustViewBounds="true"
	    android:contentDescription="@string/drawer_icon_description"/>
	
	<!-- Drawer text -->
	<TextView 
	    android:id="@+id/drawer_item_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical|left"
	    android:paddingRight="@dimen/drawer_text_padding_right"
	    android:textSize="@dimen/drawer_text_size"
	    android:ellipsize="end"
	    android:singleLine="true"
	    android:textAppearance="?attr/textAppearanceSmall"
	    style="?attr/spinnerDropDownItemStyle"/>

</LinearLayout>
